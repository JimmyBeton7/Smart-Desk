{
  "name": "smart-desk",
  "version": "1.0.6",
  "description": "smartdesk",
  "main": "main.js",
  "scripts": {
    "dev": "concurrently -k \"npm run start:renderer\" \"npm run start:electron\"",
    "start:renderer": "npx webpack serve --config webpack.config.js --mode development",
    "start:electron": "nodemon --watch main.js --exec \"electron .\"",
    "clean": "rimraf dist",
    "build": "npm run clean && webpack --mode production && electron-builder",
    "release": "npm run clean && webpack --mode production && cross-env GH_TOKEN=$GH_TOKEN electron-builder --publish always"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/JimmyBeton7/Smart-Desk.git"
  },
  "author": "md",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/JimmyBeton7/Smart-Desk/issues"
  },
  "homepage": "https://github.com/JimmyBeton7/Smart-Desk#readme",
  "devDependencies": {
    "@babel/core": "^7.28.0",
    "@babel/preset-react": "^7.27.1",
    "babel-loader": "^10.0.0",
    "buffer": "^6.0.3",
    "concurrently": "^9.2.0",
    "cross-env": "^7.0.3",
    "crypto-browserify": "^3.12.1",
    "css-loader": "^7.1.2",
    "electron": "^37.2.0",
    "electron-builder": "^26.0.12",
    "electron-reload": "^2.0.0-alpha.1",
    "html-webpack-plugin": "^5.6.3",
    "nodemon": "^3.1.10",
    "process": "^0.11.10",
    "rimraf": "^6.0.1",
    "stream-browserify": "^3.0.0",
    "style-loader": "^4.0.0",
    "wait-on": "^8.0.3",
    "webpack": "^5.99.9",
    "webpack-cli": "^6.0.1",
    "webpack-dev-server": "^5.2.2"
  },
  "dependencies": {
    "dotenv": "^17.2.0",
    "electron-updater": "^6.6.2",
    "lucide-react": "^0.525.0",
    "pdf-officegen": "^3.0.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-quill": "^2.0.0",
    "react-router-dom": "^7.6.3",
    "sharp": "^0.34.2",
    "systeminformation": "^5.27.7"
  },
  "build": {
    "appId": "com.smartdesk.app",
    "productName": "Smart Desk",
    "directories": {
      "buildResources": "assets"
    },
    "publish": [
      {
        "provider": "github",
        "private": true,
        "owner": "JimmyBeton7",
        "repo": "Smart-Desk",
        "releaseType": "release",
        "vPrefixedTagName": true
      }
    ],
    "files": [
      "dist/**/*",
      "main.js",
      "preload.js",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "data/",
        "to": "data/",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "icon": "assets/logo.ico",
      "target": "nsis"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true,
      "runAfterFinish": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Smart Desk"
    }
  }
}
